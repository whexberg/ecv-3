{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Jest Tests",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["--runInBand", "--watchAll=false", "--detectOpenHandles", "--config", "jest.config.ts"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "sourceMaps": true,
            "smartStep": true,
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
